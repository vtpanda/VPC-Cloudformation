{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Description": "VPC Base Instantiation; Note that this is only IPv4",
  "Parameters": {
    "VPCName": {
      "Description": "Identifier to use for the VPC.",
      "Type": "String"
    }
  },
  "Resources": {
    "MainVPC": {
      "Type" : "AWS::EC2::VPC",
      "Properties" : {
        "CidrBlock" : "10.0.0.0/16",
        "EnableDnsSupport" : true,
        "EnableDnsHostnames" : true,
        "InstanceTenancy" : "default",
        "Tags" : [ { "Key": "Name", "Value": { "Fn::Sub": [ "VPC - ${VPCName}", { "VPCName": {"Ref" : "VPCName" }} ]} } ]
      }
    },
    "VPCInternetGateway" : {
      "Type" : "AWS::EC2::InternetGateway",
        "Properties" : {
        "Tags" : [ { "Key": "Name", "Value": { "Fn::Sub": [ "InternetGateway - ${VPCName}", { "VPCName": {"Ref" : "VPCName" }} ]} } ]
      }
    },
    "VPCInternetGatewayAttachment" : {
      "Type" : "AWS::EC2::VPCGatewayAttachment",
      "Properties" : {
        "InternetGatewayId" : { "Ref" : "VPCInternetGateway" },
        "VpcId" : { "Ref" : "MainVPC" }
      },
      "DependsOn": [ "VPCInternetGateway", "MainVPC" ]
    } ,


    "PublicRouteTable": {
      "Type" : "AWS::EC2::RouteTable",
      "Properties" : {
        "VpcId" : { "Ref" : "MainVPC" },
        "Tags" : [ { "Key": "Name", "Value": { "Fn::Sub": [ "RouteTable - Public - ${VPCName}", { "VPCName": {"Ref" : "VPCName" }} ]} } ]
      },
      "DependsOn": [ "MainVPC" ]
    },
    "PublicRouteInternet": {
      "Type" : "AWS::EC2::Route",
      "Properties" : {
        "DestinationCidrBlock" : "0.0.0.0/0",
        "RouteTableId" : { "Ref" : "PublicRouteTable" },
        "GatewayId" : { "Ref" : "VPCInternetGateway" }
      },
      "DependsOn": [ "PublicRouteTable", "VPCInternetGatewayAttachment", "VPCInternetGateway" ]
    }
  },
  "Outputs" : {
    "MainVPCOutput" : {
      "Description" : "VPC",
      "Value" : { "Ref" : "MainVPC" },
      "Export" : {
        "Name" : { "Fn::Sub": [ "VPC-${VPCName}", { "VPCName": {"Ref" : "VPCName" }} ]}
      }
    },

    "PublicRouteTableOutput" : {
      "Description" : "Public Route Table",
      "Value" : { "Ref" : "PublicRouteTable" },
      "Export" : {
        "Name" : { "Fn::Sub": [ "RouteTable-Public-${VPCName}", { "VPCName": {"Ref" : "VPCName" }} ]}
      }
    },
    "VPCInternetGatewayOutput" : {
      "Description" : "Internet Gateway",
      "Value" : { "Ref" : "VPCInternetGateway" },
      "Export" : {
        "Name" : { "Fn::Sub": [ "InternetGateway-${VPCName}", { "VPCName": {"Ref" : "VPCName" }} ]}
      }
    }
  }
}
