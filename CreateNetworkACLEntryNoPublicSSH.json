        },
        "Protocol" : 6,
        "RuleAction" : "allow",
        "RuleNumber" : 400
      }
    },
    "PublicNACLEntryMySQLOutbound": {
      "Type" : "AWS::EC2::NetworkAclEntry",
      "Properties" : {
        "CidrBlock" : "10.0.0.0/16",
        "Egress" : true,
        "NetworkAclId" : { "Ref" : "PublicNACL" },
        "PortRange" : {
          "From" : 3306,
          "To" : 3306
        },
        "Protocol" : 6,
        "RuleAction" : "allow",
        "RuleNumber" : 500
      }
    },


