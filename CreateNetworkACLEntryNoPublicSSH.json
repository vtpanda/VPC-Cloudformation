      "Description" : "Public NACL",
      "Value" : { "Ref" : "PublicNACL" },
      "Export" : {
        "Name" : { "Fn::Sub": [ "NACL-Public-${VPCName}", { "VPCName": {"Ref" : "VPCName" }} ]}
      }
    },
    "PrivateNACLOutput" : {
      "Description" : "Private NACL",
      "Value" : { "Ref" : "PrivateNACL" },
      "Export" : {
        "Name" : { "Fn::Sub": [ "NACL-Private-${VPCName}", { "VPCName": {"Ref" : "VPCName" }} ]}
