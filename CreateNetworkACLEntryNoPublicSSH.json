{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Description": "NACL Entries for a VPC; Note that this is only IPv4",
  "Parameters": {
    "VPCName": {
      "Description": "Identifier to use for the VPC.",
      "Type": "String"
    }
  },
  "Resources": {
    "PublicNACL": {
      "Type" : "AWS::EC2::NetworkAcl",
      "Properties" : {
        "VpcId" : { "Fn::ImportValue": { "Fn::Sub": [ "VPC-${VPCName}", { "VPCName": {"Ref" : "VPCName" }} ]} },
        "Tags" : [ { "Key": "Name", "Value": { "Fn::Sub": [ "NACL - Public - ${VPCName}", { "VPCName": {"Ref" : "VPCName" }} ]} } ]
      }
    },
    "PrivateNACL": {
      "Type" : "AWS::EC2::NetworkAcl",
      "Properties" : {
        "VpcId" : { "Fn::ImportValue": { "Fn::Sub": [ "VPC-${VPCName}", { "VPCName": {"Ref" : "VPCName" }} ]} },
        "Tags" : [ { "Key": "Name", "Value": { "Fn::Sub": [ "NACL - Private - ${VPCName}", { "VPCName": {"Ref" : "VPCName" }} ]} } ]
      }
    },


    "SubnetAssocPublic1a" : {
      "Type" : "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties" : {
        "SubnetId" : { "Fn::ImportValue": { "Fn::Sub": [ "Public-1a-${VPCName}", { "VPCName": {"Ref" : "VPCName" }} ]} },
        "NetworkAclId" : { "Ref" : "PublicNACL" }
      }
    },
    "SubnetAssocPublic1b" : {
      "Type" : "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties" : {
        "SubnetId" : { "Fn::ImportValue": { "Fn::Sub": [ "Public-1b-${VPCName}", { "VPCName": {"Ref" : "VPCName" }} ]} },
        "NetworkAclId" : { "Ref" : "PublicNACL" }
      }
    },
    "SubnetAssocPrivate1a" : {
      "Type" : "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties" : {
        "SubnetId" : { "Fn::ImportValue": { "Fn::Sub": [ "Private-1a-${VPCName}", { "VPCName": {"Ref" : "VPCName" }} ]} },
        "NetworkAclId" : { "Ref" : "PrivateNACL" }
      }
    },
    "SubnetAssocPrivate1b" : {
      "Type" : "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties" : {
        "SubnetId" : { "Fn::ImportValue": { "Fn::Sub": [ "Private-1b-${VPCName}", { "VPCName": {"Ref" : "VPCName" }} ]} },
        "NetworkAclId" : { "Ref" : "PrivateNACL" }
      }
    },



    "PublicNACLEntrySSHInbound": {
      "Type" : "AWS::EC2::NetworkAclEntry",
      "Properties" : {
        "CidrBlock" : "10.0.0.0/16",
        "Egress" : false,
        "NetworkAclId" : { "Ref" : "PublicNACL" },
        "PortRange" : {
          "From" : 22,
          "To" : 22
        },
        "Protocol" : 6,
        "RuleAction" : "allow",
        "RuleNumber" : 100
      }
    },
    "PublicNACLEntryHTTPInbound": {
      "Type" : "AWS::EC2::NetworkAclEntry",
      "Properties" : {
        "CidrBlock" : "0.0.0.0/0",
        "Egress" : false,
        "NetworkAclId" : { "Ref" : "PublicNACL" },
        "PortRange" : {
          "From" : 80,
          "To" : 80
        },
        "Protocol" : 6,
        "RuleAction" : "allow",
        "RuleNumber" : 200
      }
    },
    "PublicNACLEntryHTTPSInbound": {
      "Type" : "AWS::EC2::NetworkAclEntry",
      "Properties" : {
        "CidrBlock" : "0.0.0.0/0",
        "Egress" : false,
        "NetworkAclId" : { "Ref" : "PublicNACL" },
        "PortRange" : {
          "From" : 443,
          "To" : 443
        },
        "Protocol" : 6,
        "RuleAction" : "allow",
        "RuleNumber" : 300
      }
    },
    "PublicNACLEntryEphemeralInbound": {
      "Type" : "AWS::EC2::NetworkAclEntry",
      "Properties" : {
        "CidrBlock" : "0.0.0.0/0",
        "Egress" : false,
        "NetworkAclId" : { "Ref" : "PublicNACL" },
        "PortRange" : {
          "From" : 32768,
          "To" : 60999
        },
        "Protocol" : 6,
        "RuleAction" : "allow",
        "RuleNumber" : 400
      }
    },
    "PublicNACLEntrySSHOutbound": {
